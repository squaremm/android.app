<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/transparent" >

    <ProgressBar
        android:id="@+id/notApprovedProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:visibility="gone" />

    <ScrollView
        android:id="@+id/svContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="32dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:clipToPadding="false" >

            <Button
                android:id="@+id/notApprovedJoinBtn"
                style="@style/Models20BoldText"
                android:layout_width="wrap_content"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:layout_height="50dp"
                android:layout_marginTop="156dp"
                android:layout_marginBottom="88dp"
                android:background="@drawable/background_rounded_max"
                android:text="@string/join_now"
                android:textAllCaps="true"
                android:textColor="@android:color/black" />

<!--    Description    -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@android:color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                app:cardUseCompatPadding="false" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="16dp" >

                    <TextView
                        style="@style/Models20BoldText"
                        android:textAllCaps="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/description" />

                    <View
                        android:layout_width="216dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/gray_divider" />

                    <TextView
                        android:id="@+id/cvDescriptionText"
                        style="@style/Models16Text"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_horizontal"
                        android:lineSpacingExtra="6dp"
                        tools:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

<!--    Rewards    -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cvRewards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@android:color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                app:cardUseCompatPadding="false" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="16dp" >

                    <TextView
                        style="@style/Models20BoldText"
                        android:textAllCaps="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rewards"/>

                    <View
                        android:layout_width="216dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/gray_divider" />

                    <LinearLayout
                        android:id="@+id/cvRewardsLl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="8dp"
                        android:layout_marginTop="24dp"
                        android:orientation="horizontal"
                        android:paddingBottom="8dp"
                        android:background="@drawable/background_rounded_max"
                        android:backgroundTint="@color/nice_pink" >

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_medal" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:paddingEnd="40dp"
                            android:layout_height="match_parent" >

                            <TextView
                                android:id="@+id/cvRewardsCredits"
                                style="@style/Models16BoldText"
                                android:textColor="@android:color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="+ 2000" />

                            <TextView
                                style="@style/Models16Text"
                                android:textColor="@android:color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="@string/credits_lowercase" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:id="@+id/cvRewardsDivider"
                        android:layout_width="216dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="24dp"
                        android:background="@color/gray_divider" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/cvRewardsRv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:clipToPadding="false"
                        android:orientation="vertical"
                        android:overScrollMode="never" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


<!--    First winner    -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cvWinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@android:color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                app:cardUseCompatPadding="false" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="16dp" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/medal1"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentStart="true"
                            android:src="@drawable/ic_medal" />

                        <ImageView
                            android:id="@+id/medal2"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/ic_medal" />

                        <TextView
                            style="@style/Models20BoldText"
                            android:textAllCaps="true"
                            android:gravity="center_horizontal"
                            android:layout_toStartOf="@+id/medal2"
                            android:layout_toEndOf="@+id/medal1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/first_winner" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/cvWinnerLl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="8dp"
                        android:layout_marginTop="24dp"
                        android:orientation="horizontal"
                        android:paddingBottom="8dp"
                        android:background="@drawable/background_rounded_max"
                        android:backgroundTint="@color/nice_pink" >

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_medal" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:paddingEnd="40dp"
                            android:layout_height="match_parent" >

                            <TextView
                                android:id="@+id/cvWinnerCredits"
                                style="@style/Models16BoldText"
                                android:textColor="@android:color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="+ 2000" />

                            <TextView
                                style="@style/Models16Text"
                                android:textColor="@android:color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="@string/credits_lowercase" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:id="@+id/cvWinnerDivider"
                        android:layout_width="216dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="24dp"
                        android:background="@color/gray_divider" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/cvWinnerRv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:clipToPadding="false"
                        android:orientation="vertical"
                        android:overScrollMode="never" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

<!--    Deadlines    -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cvDeadlines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@android:color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                app:cardUseCompatPadding="false" >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="16dp" >

                    <TextView
                        android:id="@+id/cvDeadlinesLabel"
                        style="@style/Models20BoldText"
                        android:textAllCaps="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/deadlines"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <View
                        android:id="@+id/cvDeadlinesDividerTop"
                        android:layout_width="216dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/gray_divider"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cvDeadlinesLabel" />

                    <TextView
                        android:id="@+id/cvDeadlinesDays1"
                        style="@style/Models16Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:text="@string/days"
                        android:textAllCaps="true"
                        android:textColor="@color/nice_pink"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/cvDeadlinesDaysValue1"
                        app:layout_constraintBottom_toBottomOf="@+id/cvDeadlinesDaysValue1" />

                    <TextView
                        android:id="@+id/cvDeadlinesDaysValue1"
                        style="@style/Models30BoldText"
                        android:textColor="@color/nice_pink"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:includeFontPadding="false"
                        tools:text="10"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toStartOf="@+id/cvDeadlinesDays1"
                        app:layout_constraintTop_toBottomOf="@+id/cvDeadlinesDividerTop" />

                    <TextView
                        android:id="@+id/cvDeadlinesDaysLabel1"
                        style="@style/Models16Text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/to_participate"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintTop_toTopOf="@+id/cvDeadlinesDaysValue1"
                        app:layout_constraintBottom_toBottomOf="@+id/cvDeadlinesDaysValue1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/cvDeadlinesDaysValue1" />

                    <View
                        android:id="@+id/cvDeadlinesDivider1"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/gray_divider"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cvDeadlinesDaysValue1" />

                    <TextView
                        android:id="@+id/cvDeadlinesDays2"
                        style="@style/Models16Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:text="@string/days"
                        android:textAllCaps="true"
                        android:textColor="@color/nice_pink"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/cvDeadlinesDaysValue2"
                        app:layout_constraintBottom_toBottomOf="@+id/cvDeadlinesDaysValue2" />

                    <TextView
                        android:id="@+id/cvDeadlinesDaysValue2"
                        style="@style/Models30BoldText"
                        android:textColor="@color/nice_pink"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:includeFontPadding="false"
                        tools:text="12"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toStartOf="@+id/cvDeadlinesDays2"
                        app:layout_constraintTop_toBottomOf="@+id/cvDeadlinesDivider1" />

                    <TextView
                        android:id="@+id/cvDeadlinesDaysLabel2"
                        style="@style/Models16Text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/to_upload_pics"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintTop_toTopOf="@+id/cvDeadlinesDaysValue2"
                        app:layout_constraintBottom_toBottomOf="@+id/cvDeadlinesDaysValue2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/cvDeadlinesDaysValue2" />

                    <View
                        android:id="@+id/cvDeadlinesDivider2"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/gray_divider"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cvDeadlinesDaysValue2" />

                    <TextView
                        android:id="@+id/cvDeadlinesDays3"
                        style="@style/Models16Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:text="@string/days"
                        android:textAllCaps="true"
                        android:textColor="@color/nice_pink"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/cvDeadlinesDaysValue3"
                        app:layout_constraintBottom_toBottomOf="@+id/cvDeadlinesDaysValue3" />

                    <TextView
                        android:id="@+id/cvDeadlinesDaysValue3"
                        style="@style/Models30BoldText"
                        android:textColor="@color/nice_pink"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:includeFontPadding="false"
                        tools:text="20"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toStartOf="@+id/cvDeadlinesDays3"
                        app:layout_constraintTop_toBottomOf="@+id/cvDeadlinesDivider2" />

                    <TextView
                        android:id="@+id/cvDeadlinesDaysLabel3"
                        style="@style/Models16Text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/to_upload_pics_ig"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintTop_toTopOf="@+id/cvDeadlinesDaysValue3"
                        app:layout_constraintBottom_toBottomOf="@+id/cvDeadlinesDaysValue3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/cvDeadlinesDaysValue3" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

<!--    Model type    -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cvModel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@android:color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                app:cardUseCompatPadding="false" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="16dp" >

                    <TextView
                        style="@style/Models20BoldText"
                        android:textAllCaps="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/model_type" />

                    <View
                        android:layout_width="216dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/gray_divider" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/cvModelRv"
                        android:layout_width="match_parent"
                        android:layout_height="96dp"
                        android:layout_marginTop="24dp"
                        android:clipToPadding="false"
                        android:overScrollMode="never" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

<!--    Task    -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cvTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@android:color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                app:cardUseCompatPadding="false" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="16dp" >

                    <TextView
                        style="@style/Models20BoldText"
                        android:textAllCaps="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/task" />

                    <View
                        android:layout_width="216dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/gray_divider" />

                    <LinearLayout
                        android:id="@+id/cvTaskStoriesLl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/Models16Text"
                            android:textColor="@color/nice_pink"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/stories" />

                        <TextView
                            style="@style/Models16Text"
                            android:layout_marginStart="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/at_least" />

                        <TextView
                            android:id="@+id/cvTaskStories"
                            style="@style/Models16BoldText"
                            android:layout_marginStart="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="3 stories" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/cvTaskPostsLl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/Models16Text"
                            android:textColor="@color/nice_pink"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/posts" />

                        <TextView
                            style="@style/Models16Text"
                            android:layout_marginStart="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/make_at_least" />

                        <TextView
                            android:id="@+id/cvTaskPosts"
                            style="@style/Models16BoldText"
                            android:layout_marginStart="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="one Instagram post" />
                    </LinearLayout>

                    <View
                        android:layout_width="216dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/gray_divider" />

                    <TextView
                        android:id="@+id/cvTaskTag"
                        style="@style/Models16Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:lineSpacingExtra="6dp"
                        android:layout_marginTop="16dp"
                        tools:text="@string/when_publishing_tag" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

<!--    Mood board    -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cvMood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@android:color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                app:cardUseCompatPadding="false" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="12dp" >

                    <TextView
                        style="@style/Models20BoldText"
                        android:textAllCaps="true"
                        android:paddingTop="4dp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/moodboard" />

                    <View
                        android:layout_width="216dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/gray_divider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal" >

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/cvMoodRv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clipToPadding="false"
                            android:overScrollMode="never"
                            android:visibility="visible" />

                        <ProgressBar
                            android:id="@+id/cvMoodProgress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:indeterminate="true"
                            android:layout_marginTop="4dp"
                            android:paddingBottom="4dp"
                            android:visibility="gone" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

<!--    How it works    -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cvHow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                app:cardUseCompatPadding="false" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:padding="16dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        style="@style/Models20BoldText"
                        android:textAllCaps="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/how_it_works" />

                    <View
                        android:layout_width="216dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/gray_divider" />

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/cvHowPager"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        tools:layout_height="250dp"
                        android:layout_marginTop="24dp"
                        android:layout_weight="1"
                        android:background="@color/black_trans_50"
