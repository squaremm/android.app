<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:clipChildren="false"
    android:background="@color/coupon_bg" >

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatMessagesRv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="24dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@+id/chatTopContainer"
        app:layout_constraintBottom_toTopOf="@+id/chatMessageContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chatTopContainer"
        android:layout_width="match_parent"
        android:paddingBottom="12dp"
        android:clipToPadding="false"
        android:background="@android:color/white"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <ImageView
            android:id="@+id/chatBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.square.android.ui.view.CircleImageView
            android:id="@+id/chatImage"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:background="@drawable/circle_white"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/chatBack"
            tools:src="@drawable/r_dial" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@+id/chatImage"
            app:layout_constraintBottom_toBottomOf="@+id/chatImage"
            app:layout_constraintStart_toEndOf="@+id/chatImage"
            app:layout_constraintEnd_toEndOf="parent" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/chatDriverName"
                    style="@style/Models16BoldText"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_marginEnd="12dp"
                    app:layout_constrainedWidth="true"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/chatRating"
                    tools:text="Mark C." />

                <TextView
                    android:id="@+id/chatRating"
                    style="@style/Models14BoldText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_marginEnd="3dp"
                    android:includeFontPadding="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/chatStarIcon"
                    tools:text="3.5" />

                <ImageView
                    android:id="@+id/chatStarIcon"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginBottom="2dp"
                    android:src="@drawable/ic_star"
                    android:tint="@color/yellow"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/chatCarName"
                android:textColor="@color/gray_hint_ligh"
                style="@style/Models16Text"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Honda Civic" />

            <TextView
                android:id="@+id/chatCarPlate"
                style="@style/Models16Text"
                android:textColor="@color/gray_hint_ligh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="HF 321 EX" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/Models16Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/color" />

                <TextView
                    android:id="@+id/chatCarColor"
                    style="@style/Models16Text"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/gray_hint_ligh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Black" />

            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/chatMessageContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:elevation="3dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="12dp"
        android:background="@drawable/rounded_background_white"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <ImageView
            android:id="@+id/chatSend"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignBottom="@+id/chatText"
            android:src="@drawable/r_dial"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/chatPin"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_pin"
            android:layout_alignBottom="@+id/chatText"
            android:layout_marginEnd="6dp"
            android:layout_toStartOf="@+id/chatSend" />

        <EditText
            android:id="@+id/chatText"
            style="@style/Models16Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="32dp"
            android:layout_marginEnd="16dp"
            android:background="@null"
            android:maxLines="5"
            android:textCursorDrawable="@null"
            android:inputType="text|textMultiLine|textCapSentences"
            android:textColorHint="@color/grey_dark"
            android:hint="@string/type_your_message"
            tools:text=""
            android:isScrollContainer="true"
            android:textIsSelectable="true"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/chatPin" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>