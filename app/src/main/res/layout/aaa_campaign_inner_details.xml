<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@drawable/ic_launcher_background"
    android:background="@android:color/transparent" >

    <ProgressBar
        android:id="@+id/notApprovedProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ScrollView
        android:id="@+id/svContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:fillViewport="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="32dp"
            android:clipChildren="false"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:clipToPadding="false" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_marginTop="258dp"
                tools:layout_marginTop="0dp"
                android:clipToPadding="false"
                android:layout_height="wrap_content" >

                <androidx.cardview.widget.CardView
                    android:id="@+id/mainLogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="3dp"
                    app:cardUseCompatPadding="false"
                    app:layout_constraintBottom_toTopOf="@+id/cvMainContent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/cvMainContent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/mainIcon"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        tools:tint="@color/nice_pink" />
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cvMainContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="32dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:clipChildren="false"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp"
                    app:cardUseCompatPadding="false" >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:clipToPadding="false"
                        android:clipChildren="false"
                        android:paddingTop="20dp"
                        android:paddingBottom="32dp" >

                        <TextView
                            android:id="@+id/title"
                            style="@style/Models24BoldText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="24dp"
                            tools:visibility="gone"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="Emporio Armani" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/hashtag"
                            style="@style/Models16Text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            tools:visibility="gone"
                            android:textColor="@color/gray_back_arrow"
                            app:autoSizeTextType="uniform"
                            app:layout_constraintEnd_toEndOf="@+id/title"
                            app:layout_constraintStart_toStartOf="@+id/title"
                            app:layout_constraintTop_toBottomOf="@+id/title"
                            tools:text="#hashtag" />

                        <TextView
                            android:id="@+id/mainType"
                            style="@style/Models14BoldText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/interval_checked"
                            android:paddingStart="12dp"
                            android:paddingTop="8dp"
                            android:paddingEnd="12dp"
                            android:paddingBottom="8dp"
                            tools:visibility="gone"
                            android:textColor="@color/nice_pink"
                            app:layout_constraintStart_toStartOf="@+id/hashtag"
                            app:layout_constraintTop_toBottomOf="@+id/hashtag"
                            tools:text="Gifting" />

                        <LinearLayout
                            android:id="@+id/approvalStatusLl"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            tools:visibility="gone"
                            android:layout_marginEnd="24dp"
                            android:orientation="horizontal"
                            app:layout_constraintBottom_toBottomOf="@+id/mainType"
                            app:layout_constraintEnd_toEndOf="parent" >
                            <View
                                android:id="@+id/mainStatusCircle"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:background="@drawable/round_background"
                                tools:backgroundTint="@color/status_green" />

                            <TextView
                                android:id="@+id/mainStatusText"
                                style="@style/Models12Text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                tools:text="Active" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/descriptionLabel"
                            style="@style/Models16BoldText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="24dp"
                            android:layout_marginTop="28dp"
                            tools:visibility="gone"
                            android:text="@string/description"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/mainType" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvIcons"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            android:overScrollMode="never"
                            android:visibility="gone"
                            tools:visibility="gone"
                            android:layout_marginEnd="24dp"
                            app:layout_constraintBottom_toBottomOf="@+id/descriptionLabel"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/descriptionLabel"
                            tools:background="@color/grey_dark"
                            tools:itemCount="3"
                            tools:layout_height="32dp"
                            tools:listitem="@layout/item_place_extra"
                            tools:orientation="horizontal" />

                        <TextView
                            android:id="@+id/descriptionTv"
                            style="@style/Models16Text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="24dp"
                            android:layout_marginTop="20dp"
                            android:lineSpacingExtra="6dp"
                            tools:visibility="gone"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/descriptionLabel"
                            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut laborÄ™ et dolore magna aliqua. iiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiii" />

                        <LinearLayout
                            android:id="@+id/readMoreLl"
                            android:layout_width="wrap_content"
                            android:layout_height="26dp"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            tools:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="@+id/descriptionTv"
                            app:layout_constraintEnd_toEndOf="@+id/descriptionTv" >

                            <View
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="@drawable/shadow_horizontal" />

                            <TextView
                                android:id="@+id/readMore"
                                style="@style/Models16BoldText"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="end|bottom"
                                android:background="@android:color/white"
                                android:paddingStart="6dp"
                                android:text="@string/read_more"
                                android:textColor="@color/nice_pink" />
                        </LinearLayout>

                        <View
                            android:id="@+id/separatorDesc"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="24dp"
                            tools:visibility="gone"
                            android:background="@color/gray_divider"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.417"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/descriptionTv" />

                        <TextView
                            android:id="@+id/productsLabel"
                            style="@style/Models16BoldText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="24dp"
                            android:layout_marginTop="24dp"
                            tools:visibility="gone"
                            android:text="@string/products"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/separatorDesc" />

                        <LinearLayout
                            android:id="@+id/seeAllProducts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_marginEnd="24dp"
                            tools:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="@+id/productsLabel"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/productsLabel" >

                            <TextView
                                style="@style/Models14Text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:text="@string/see_all"
                                android:textColor="@color/gray_hint" />

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/chevron_right"
                                android:tint="@color/gray_hint" />
                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/productsRv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:clipToPadding="false"
                            android:nestedScrollingEnabled="false"
                            android:overScrollMode="never"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="24dp"
                            tools:visibility="gone"
                            app:layout_constraintTop_toBottomOf="@+id/productsLabel"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            tools:background="@color/gray_hint"
                            tools:itemCount="1"
                            tools:layout_height="20dp" />

                        <View
                            android:id="@+id/separatorProdcts"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="24dp"
                            tools:visibility="gone"
                            android:background="@color/gray_divider"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.417"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/productsRv" />

                        <TextView
                            android:id="@+id/howToLabel"
                            style="@style/Models16BoldText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="24dp"
                            android:layout_marginTop="24dp"
                            android:text="@string/how_to_get_product"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/separatorProdcts" />

<!--        TODO: three items(collection, shipment, purchase) instead of RV                -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/howToRv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:clipToPadding="false"
                            android:nestedScrollingEnabled="false"
                            android:overScrollMode="never"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="24dp"
                            app:layout_constraintTop_toBottomOf="@+id/howToLabel"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            tools:background="@color/gray_hint"
                            tools:itemCount="1"
                            tools:layout_height="20dp" />

                        <TextView
                            android:id="@+id/howToTv"
                            style="@style/Models16Text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="24dp"
                            android:layout_marginTop="20dp"
                            android:lineSpacingExtra="6dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/howToRv"
                            tools:text="Collection: the product will be available for pick up in specific points in M..." />

                        <LinearLayout
                            android:id="@+id/readMoreHowToLl"
                            android:layout_width="wrap_content"
                            android:layout_height="26dp"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            tools:visibility="visible"
                            app:layout_constraintBottom_toBottomOf="@+id/howToTv"
                            app:layout_constraintEnd_toEndOf="@+id/howToTv" >

                            <View
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="@drawable/shadow_horizontal" />

                            <TextView
                                android:id="@+id/readMoreHowTo"
                                style="@style/Models16BoldText"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="end|bottom"
                                android:background="@android:color/white"
                                android:paddingStart="6dp"
                                android:text="@string/read_more"
                                android:textColor="@color/nice_pink" />
                        </LinearLayout>

                        <View
                            android:id="@+id/separatorHowTo"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="24dp"
                            tools:visibility="visible"
                            android:background="@color/gray_divider"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.417"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/howToTv" />






















                        <View
                            android:id="@+id/separatorBtn"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_marginTop="16dp"
                            android:background="@color/gray_divider"
                            app:layout_constraintEnd_toEndOf="parent"
                            tools:layout_marginTop="530dp"
                            app:layout_constraintHorizontal_bias="0.417"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/mainType" />

                        <Button
                            android:id="@+id/notApprovedJoinBtn"
                            style="@style/Models14Text"
                            android:layout_width="0dp"
                            android:layout_height="46dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="24dp"
                            android:background="@drawable/nice_button_red_pink_alpha"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            tools:text="Join now with just 200 credits"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/separatorBtn" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>