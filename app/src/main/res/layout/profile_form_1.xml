<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:background="@android:color/white"
    android:paddingBottom="16dp"
    tools:showIn="@layout/fragment_fill_profile_1" >

        <com.square.android.utils.widget.ErrorEditText
            android:id="@+id/formProfileName"
            style="@style/NewInputField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_name"
            android:inputType="textPersonName|textCapSentences" />

        <com.square.android.utils.widget.ErrorEditText
            android:id="@+id/formProfileLastName"
            style="@style/NewInputField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_surname"
            android:inputType="textPersonName|textCapSentences" />

        <TextView
            android:id="@+id/formProfileNationality"
            style="@style/NewInputSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/nationality_pure" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/formProfileBirth"
                style="@style/NewInputSpinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:hint="@string/hint_birth"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/formProfileGender"
                style="@style/NewInputSpinner"
                android:layout_marginStart="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:hint="@string/hint_gender" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/formDialCodeLl"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:layout_width="128dp"
                android:background="@drawable/background_rounded_4dp"
                android:elevation="3dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/formDialFlag"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    tools:src="@drawable/flag_ac" />

                <TextView
                    android:id="@+id/formDialCode"
                    style="@style/Models14Text"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="+1"
                    android:drawableEnd="@drawable/spinner_arrow_selector" />
            </LinearLayout>

            <com.square.android.utils.widget.ErrorEditText
                android:id="@+id/formDialPhoneNumber"
                style="@style/NewInputField"
                android:layout_width="match_parent"
                android:layout_marginStart="16dp"
                android:layout_height="wrap_content"
                android:hint="@string/mobile_number"
                android:digits="0123456789"
                android:imeOptions="actionNext"
                android:inputType="phone" />

        </LinearLayout>

        <com.square.android.utils.widget.ErrorEditText
            android:id="@+id/formProfileAccount"
            style="@style/NewInputField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="@string/username_instagram_account" />

    </LinearLayout>