<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/placeRoot"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent" >

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/placeAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/placeCollapsing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            app:contentScrim="@android:color/white"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_collapseMode="parallax">

                <ImageView
                    android:id="@+id/placeMainImage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/toolbar_image_height"
                    android:scaleType="centerCrop"
                    android:fitsSystemWindows="true"
                    android:background="@color/placeholder"
                    tools:src="@drawable/fill_profile_header_1" />
            </FrameLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/placeToolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbarHeight"
                android:layout_marginTop="@dimen/statusMargin"
                app:contentInsetStart="0dp"
                app:layout_collapseMode="pin"
                app:title="@null"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" >

                <ImageView
                    android:id="@+id/placeArrowBack"
                    android:layout_width="@dimen/backArrowSize"
                    android:layout_height="@dimen/backArrowSize"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginStart="@dimen/backArrowMarginStart"
                    android:src="@drawable/ic_arrow_back"
                    android:tint="@android:color/white" />
            </androidx.appcompat.widget.Toolbar>

            <TextView
                android:id="@+id/placeName"
                style="@style/Models24Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:includeFontPadding="false"
                android:gravity="center_vertical"
                android:layout_marginStart="@dimen/ac_place_default_margin"
                android:layout_marginEnd="@dimen/ac_place_default_margin"
                tools:text="Le Cristalline" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/placeNested"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@android:color/white"
        android:paddingBottom="104dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

<!--////////// Location //////////-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/placeAddressCl"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="16dp"
                        android:paddingBottom="20dp"
                        android:background="?attr/selectableItemBackground"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" >

                        <ImageView
                            android:id="@+id/placePinImage"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="@dimen/ac_place_default_margin"
                            android:src="@drawable/r_pin"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/placeAddress" />

                        <ImageView
                            android:id="@+id/placeDistanceImage"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="@dimen/ac_place_default_margin"
                            android:src="@drawable/r_sign"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/placeAddress" />

                        <TextView
                            android:id="@+id/placeAddress"
                            style="@style/Models16Text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:includeFontPadding="false"
                            android:lineSpacingExtra="8dp"
                            app:layout_constraintEnd_toStartOf="@+id/placeDistance"
                            app:layout_constraintStart_toEndOf="@+id/placePinImage"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="Via Vigevano, 13\n20127, Milan" />

                        <TextView
                            android:id="@+id/placeDistance"
                            style="@style/Models16Text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="start"
                            android:includeFontPadding="false"
                            android:minWidth="24dp"
                            app:layout_constraintEnd_toEndOf="@+id/placeDistanceImage"
                            app:layout_constraintTop_toBottomOf="@+id/placeDistanceImage"
                            tools:text="150" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:id="@+id/separatorTwo"
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_marginStart="@dimen/ac_place_default_margin"
                        android:layout_marginEnd="@dimen/ac_place_default_margin"
                        android:background="@color/divider"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/placeAddressCl" />

                    <LinearLayout
                        android:id="@+id/constraintLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:orientation="vertical"
                        app:layout_constraintVertical_bias="0"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/separatorTwo" >

<!--////////// About //////////-->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/placeAboutCl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:visibility="visible"
                            android:clipChildren="false"
                            android:clipToPadding="false" >

                            <TextView
                                android:id="@+id/placeAboutLabel"
                                style="@style/Models16Text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/ac_place_default_margin"
                                android:layout_marginTop="20dp"
                                android:text="@string/about"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:id="@+id/placeAboutImage"
                                android:layout_width="0dp"
                                android:layout_height="32dp"
                                android:layout_marginEnd="@dimen/ac_place_default_margin"
                                android:adjustViewBounds="true"
                                android:scaleType="centerInside"
                                tools:src="@drawable/r_shoe"
                                app:layout_constraintBottom_toBottomOf="@+id/placeAboutLabel"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/placeAboutLabel" />

                            <TextView
                                android:id="@+id/placeAbout"
                                style="@style/Models16Text"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/ac_place_default_margin"
                                android:layout_marginTop="16dp"
                                android:layout_marginEnd="@dimen/ac_place_default_margin"
                                android:layout_marginBottom="20dp"
                                android:lineSpacingExtra="6dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/placeAboutLabel"
                                tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut laborÄ™ et dolore magna aliqua. iiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiii" />

                            <LinearLayout
                                android:id="@+id/placeReadMore"
                                android:layout_width="wrap_content"
                                android:layout_height="26dp"
                                android:orientation="horizontal"
                                android:visibility="gone"
                                tools:visibility="visible"
                                app:layout_constraintBottom_toBottomOf="@+id/placeAbout"
                                app:layout_constraintEnd_toEndOf="@+id/placeAbout" >

                                <View
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:background="@drawable/shadow_horizontal" />

                                <TextView
                                    android:id="@+id/placeShowMore"
                                    style="@style/Models16BoldText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="end|bottom"
                                    android:background="@android:color/white"
                                    android:paddingStart="6dp"
                                    android:text="@string/show_more"
                                    android:textColor="@color/nice_pink" />
                            </LinearLayout>

                            <View
                                android:id="@+id/separatorThree"
                                android:layout_width="match_parent"
                                android:layout_height="1.5dp"
                                android:layout_marginStart="@dimen/ac_place_default_margin"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="@dimen/ac_place_default_margin"
                                android:background="@color/divider"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/placeAboutRv" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/placeAboutRv"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:clipToPadding="false"
                                android:overScrollMode="never"
                                android:paddingStart="@dimen/ac_place_default_margin"
                                android:paddingEnd="@dimen/ac_place_default_margin"
                                android:visibility="gone"
                                tools:background="@color/grey_dark"
                                android:nestedScrollingEnabled="false"
                                tools:visibility="visible"
                                tools:layout_height="50dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/placeAbout" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

<!--////////// Requirements //////////-->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/placeRequirementsCl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            tools:visibility="visible"
                            android:clipChildren="false"
                            android:clipToPadding="false" >

                            <TextView
                                android:id="@+id/placeRequirementsLabel"
                                style="@style/Models16Text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/ac_place_default_margin"
                                android:layout_marginTop="20dp"
                                android:text="@string/requirements"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/placeRequirementsRv"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:clipToPadding="false"
                                android:overScrollMode="never"
                                android:layout_marginStart="@dimen/ac_place_default_margin"
                                android:layout_marginEnd="@dimen/ac_place_default_margin"
                                tools:background="@color/grey_dark"
                                android:nestedScrollingEnabled="false"
                                tools:layout_height="15dp"
                                app:layout_constraintTop_toBottomOf="@+id/placeRequirementsLabel"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />

                            <View
                                android:id="@+id/separatorFour"
                                android:layout_width="match_parent"
                                android:layout_height="1.5dp"
                                android:layout_marginStart="@dimen/ac_place_default_margin"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="@dimen/ac_place_default_margin"
                                android:background="@color/divider"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/placeRequirementsRv" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

 <!--////////// Calendar //////////-->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/placeCalendarCl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clipToPadding="false"
                            tools:visibility="visible"
                            android:paddingBottom="20dp" >

                            <TextView
                                android:id="@+id/placeBookingMonth"
                                style="@style/Models16Text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:textAllCaps="true"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:text="SEPTEMBER 2019" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/placeBookingCalendar"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/ac_place_default_margin"
                                android:layout_marginTop="16dp"
                                android:layout_marginEnd="@dimen/ac_place_default_margin"
                                android:nestedScrollingEnabled="false"
                                android:orientation="horizontal"
                                android:overScrollMode="never"
                                android:scrollbars="none"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/placeBookingMonth"
                                tools:background="@color/gray_hint"
                                tools:layout_height="50dp" />

                            <TextView
                                android:id="@+id/placeTimeframesLabel"
                                style="@style/Models16Text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/ac_place_default_margin"
                                android:layout_marginTop="20dp"
                                android:text="@string/timeframes"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/placeBookingCalendar" />

                            <ProgressBar
                                android:id="@+id/placeProgress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:indeterminateTint="@color/nice_red"
                                android:visibility="gone"
                                app:layout_constraintTop_toBottomOf="@+id/placeTimeframesLabel"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/placeIntervalsRv"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:clipToPadding="false"
                                android:overScrollMode="never"
                                android:paddingStart="@dimen/ac_place_default_margin"
                                android:paddingEnd="@dimen/ac_place_default_margin"
                                android:visibility="gone"
                                tools:visibility="visible"
                                android:nestedScrollingEnabled="false"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/placeProgress"
                                tools:background="@color/gray_hint"
                                tools:layout_height="50dp" />

                            <TextView
                                android:id="@+id/placeIntervalsEmpty"
                                style="@style/Models18Text"
                                android:layout_width="0dp"
                                android:layout_height="80dp"
                                android:layout_marginTop="16dp"
                                android:background="@drawable/referral_field_background"
                                android:backgroundTint="@color/gray_light"
                                android:gravity="center"
                                android:text="@string/cant_use_square"
                                android:textColor="@color/blueish_gray"
                                android:visibility="gone"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/placeProgress" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

<!-- ////////// Offers //////////-->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/placeOffersCl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            tools:visibility="visible"
                            android:clipChildren="false"
                            android:clipToPadding="false"
                            android:paddingBottom="20dp" >

                            <TextView
                                android:id="@+id/placeOffersLabel"
                                style="@style/Models16Text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/ac_place_default_margin"
                                android:text="@string/offers"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/placeOffersRv"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:clipToPadding="false"
                                android:overScrollMode="never"
                                android:paddingStart="@dimen/ac_place_default_margin"
                                android:paddingEnd="@dimen/ac_place_default_margin"
                                android:nestedScrollingEnabled="false"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/placeOffersLabel"
                                tools:background="@color/gray_hint"
                                tools:layout_height="50dp" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

<!--////////// Booking //////////-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/placeBookingCl"
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_gravity="bottom"
        android:clipChildren="false"
        android:background="@android:color/white"
        app:layout_anchorGravity="bottom"
        android:clipToPadding="false"
        android:paddingBottom="20dp" >

        <Button
            android:id="@+id/placeBookingBtn"
            style="@style/Models16Text"
            android:layout_width="112dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="@dimen/ac_place_default_margin"
            android:background="@drawable/nice_button_red_pink_alpha"
            android:enabled="false"
            android:text="@string/book_now"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/placeBookingImv"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/placeBookingImv"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="@dimen/ac_place_default_margin"
            android:layout_marginTop="20dp"
            android:src="@drawable/r_calendar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/separatorBooking" />

        <TextView
            android:id="@+id/placeBookingText"
            style="@style/Models14BoldText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:hint="@string/select_timeframe"
            android:maxLines="1"
            android:textColorHint="@color/gray_hint_light"
            app:layout_constraintEnd_toStartOf="@+id/placeBookingBtn"
            app:layout_constraintStart_toEndOf="@+id/placeBookingImv"
            app:layout_constraintTop_toBottomOf="@+id/placeBookingDate" />

        <TextView
            android:id="@+id/placeBookingDate"
            style="@style/Models16Text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintEnd_toStartOf="@+id/placeBookingBtn"
            app:layout_constraintStart_toEndOf="@+id/placeBookingImv"
            app:layout_constraintTop_toTopOf="@+id/placeBookingImv"
            tools:text="Monday, May 7th" />

        <View
            android:id="@+id/separatorBooking"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@color/divider"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>