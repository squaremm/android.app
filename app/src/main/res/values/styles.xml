<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WhiteStatusActivity" parent="AppTheme">
        <item name="colorPrimaryDark">@color/white</item>
    </style>

    <style name="CollapsingToolbarActivity" parent="AppTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="CollapsingToolbarLayoutExpandedTextStyle" parent="AppTheme">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textSize">0sp</item>
    </style>

    <style name="ToolBarWithNavigationBack">
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
    </style>

    <style name="StartActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/login_button</item>
    </style>

    <style name="InputField">
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:background">@drawable/input_background</item>
    </style>

    <style name="InputTitle" parent="InputField">
        <item name="android:textColor">?android:textColorHint</item>
    </style>

    <!-- Text styles -->
    <style name="ModelsText">
        <item name="android:textColor">@color/models_text_color</item>
        <item name="android:textColorHint">@color/gray_hint</item>
        <item name="android:lineSpacingMultiplier">1</item>
    </style>

    <style name="Models12Text" parent="ModelsText">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Models14Text" parent="ModelsText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Models16Text" parent="ModelsText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Models16BoldText" parent="ModelsText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Models18BoldText" parent="ModelsText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Models20Text" parent="ModelsText">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Models22BoldText" parent="ModelsText">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RadioButton">
        <item name="android:button">@null</item>
        <item name="android:drawableLeft">@drawable/circle_checkbox</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

</resources>
